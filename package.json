{
  "name": "goui",
  "version": "0.1.31",
  "description": "A goLance UI library",
  "main": "source/index.styl",
  "repository": "https://github.com/goLance-LLC/goui",
  "author": "golance",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.3",
    "stylus": "^0.54.5"
  },
  "scripts": {
    "compile": "stylus --include-css --sourcemap source --out build/goui.css",
    "minify": "cleancss --source-map -o build/goui.min.css build/goui.css",
    "build": "npm run compile && npm run minify",
    "prepublish": "npm run build"
  }
}
