.gl.field
.gl.form .field
  $background = #fff
  $border = 1px solid $color-grey-lighter

  > input
    background $background
    border $border
    border-radius 0
    box-shadow none
    padding .8em 1em
    transition border-color $transition-duration

    &:not([type='checkbox']):not([type='radio'])
      -webkit-appearance none

    +placeholder()
      color $color-grey

    &:focus
      border-color $color-primary-lighter
      outline none

  &.fluid
  /.gl.fluid.form .field

    > input
      width 100%

  &.iconed
    align-items center
    background $background
    border $border
    display flex

    > .icon + input
      padding-left 0

    > .icon
      font-size .9em
      margin-left ($indent / 4)
      margin-right @margin-left

    > input
      border none

.gl.form .field

  + *
    margin-top ($indent / 2)

  + .actions
    margin-top $indent

    + *
      margin-top ($indent / 2)

    &.fluid
    /.gl.fluid.form .actions

      > *
        width 100%
