.gl.container
  display flex
  flex-direction column
  justify-content center
  margin-left auto
  margin-right auto
  overflow-x hidden
  position relative
  width 'calc(100% - %s)' % 10vw

  &:not(.fluid)
    max-width 1127px

    &.mini
      max-width 320px

    &.tiny
      max-width 640px

    &.small
      max-width 960px

    &.large
      max-width 1300px

  &.fitted
    width 100%

  &.growing
    flex-grow 1

  &.gallery

    .swiper-slide
      cursor pointer
      opacity .5
      transform scale(.7)
      transition opacity .2s,
                 transform .2s
      width 10em

      &-active
        opacity 1
        transform scale(1)

