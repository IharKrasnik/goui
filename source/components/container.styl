.gl.container
  display flex
  flex-direction column
  justify-content center
  margin-left auto
  margin-right auto
  overflow-x hidden
  position relative
  width 'calc(100% - %s)' % 5vw

  &:not(.fluid)
    max-width 1127px

    &.micro
      max-width 320px

    &.mini
      max-width 480px

    &.tiny
      max-width 640px

    &.small
      max-width 960px

    &.large
      max-width 1300px

  &.fitted
    width 100%

  &.growing
    flex-grow 1
