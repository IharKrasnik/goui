$card-indent = $indent / 2
$card-width = 290px

.gl.card
.gl.cards > .card
  align-items center
  background #fff
  display flex
  flex-direction column
  justify-content center
  margin $card-indent
  padding $card-indent
  width $card-width

  > *
    width 100%

  > header
    align-items center
    display flex

    > .actions
      align-items center
      display flex
      justify-content center
      margin-left auto

      > .action
        display flex

  > .content
    align-items center
    display flex
    flex 1
    flex-direction column
    justify-content center
    margin-bottom $indent
    margin-top @margin-bottom
    text-align center

    > * + *
      margin-top $card-indent

    > .title
      font-weight 700

  > footer
    align-items center
    display flex
    justify-content center

    > :first-child
      margin-right auto

    > :last-child
      margin-left auto

.gl.cards
  column-gap ($card-indent * 2)
  column-count auto
  column-width $card-width

  > .card
    display inline-flex
    margin-bottom ($card-indent * 2)
    margin-left 0
    margin-right 0
    margin-top 0

  &.three
    max-width 'calc(%s + %s)' % (($card-width * 3) ($card-indent * 6))

  &[class*='center aligned']
    text-align center

  &.centered
    margin-left auto
    margin-right auto
